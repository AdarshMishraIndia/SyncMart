<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register_bg"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:shadowColor="#37FF00"
        android:shadowRadius="10"
        android:stateListAnimator="@animator/button_press_anim"
        android:text="Welcome to SyncMart"
        android:textColor="#0037FF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <!-- Logo -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/centeredImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/rounded_logo_bg"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_syncmart"
        app:civ_border_color="#31A426"
        app:civ_border_width="4dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="ImageContrastCheck" />

    <!-- Google Sign-In Button -->
    <include
        android:id="@+id/google_auth_button"
        layout="@layout/google_auth_btn_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/centeredImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
